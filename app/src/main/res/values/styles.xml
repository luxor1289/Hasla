<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionMenuTextColor">#FFFFFF</item>
    </style>

    <!-- ActionBar theme. -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">#009688</item>
        <item name="android:titleTextStyle">@style/MyActionBarTextColor</item>
    </style>

    <!-- ActionBar text color. -->
    <style name="MyActionBarTextColor" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <!-- tekst  na Button -->
    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#404040</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    
    
     <!-- tekst  nazwy w liscie -->
    <style name="nazwa_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>   
        <item name="android:textSize" >17sp</item>
        <item name="android:textColor" >#404040</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    
             <!-- tekst  strony w liscie -->
    <style name="strona_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#6E6E6E</item>
        <item name="android:textSize" >11sp</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    
    
            <!-- tekst  loginu w liscie -->
    <style name="strona_login" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#009688</item>
        <item name="android:textSize" >11sp</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    
    
    
    
             <!-- SZCZEGOLY -->
    <style name="szczegoly_login" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#666666</item>
        <item name="android:textSize" >18sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    
    
     <style name="szczegoly_haslo" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#FF3300</item>       
        <item name="android:textSize" >18sp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowRadius" >2</item>
    </style>
    
     
      <style name="szczegoly_strona" >    
        <item name="android:textSize" >18sp</item>
    </style>
    
      
      <style name="szczegoly_opis" >    
        <item name="android:textSize" >18sp</item>
    </style>
    
    
    
</resources>
